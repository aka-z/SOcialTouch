<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash" >

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_pageindicator"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/splash_intro"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_pageindicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vp_tutorial"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_indicator_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bkg_page_indicator"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tv_indicator_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bkg_page_indicator"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv_indicator_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bkg_page_indicator"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:id="@+id/tv_indicator_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bkg_page_indicator"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/tv_indicator_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bkg_page_indicator"
            android:gravity="center"
            android:text="5" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tutorial"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/btn_fb_connect"
        android:layout_marginBottom="20dp"
        android:background="@color/biere_mousse" />

    <Button
        android:id="@+id/btn_fb_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cmn_btn_loginfacebook"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>