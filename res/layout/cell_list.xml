<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingTop="@dimen/padding_medium" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_large"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cell_list_avatar"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@android:color/white"
            android:scaleType="centerInside"
            android:src="@drawable/profil_f"/>

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_small"
            android:text="95%"
            android:textColor="@color/textcolor_main"
            android:textSize="21dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isabelle Lachatte"
            android:textColor="@color/textcolor_main"
            android:textSize="19dp"
            android:textStyle="bold" />

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_sttag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$socialtouchtag"
            android:textColor="@color/textcolor_main"
            android:textSize="16dp"
            android:textStyle="italic" />

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_pointcommun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:text="Vos points communs :"
            android:textColor="@color/textcolor_main" />

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_points0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:drawableLeft="@drawable/index"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="point commun0"
            android:textColor="@color/textcolor_main" />

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_points1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/index"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="point commun1"
            android:textColor="@color/textcolor_main" />

        <fr.socialtouch.android.view.TextViewST
            android:id="@+id/cell_list_points2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/index"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="point commun2"
            android:textColor="@color/textcolor_main" />
    </LinearLayout>

</LinearLayout>