<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_general3" >

    <TextView
        android:id="@+id/tv_choose_your_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="Choisis un tag : " />

    <EditText
        android:id="@+id/ed_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_choose_your_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Mon tag"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/black" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_pose_ton_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_hashtag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:text="Pose ton téléphone sur le tag !" />

</RelativeLayout>